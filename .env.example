# Database Configuration
DATABASE_URL=sqlite:///./momo_sms.db
# DATABASE_URL=mysql+pymysql://username:password@localhost/momo_sms_db
# DATABASE_URL=postgresql://username:password@localhost/momo_sms_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# File Paths
DATA_DIR=./data
XML_FILE_PATH=./data/sms_data.xml
PARSED_JSON_PATH=./data/parsed_transactions.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/momo_api.log

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Dashboard
DASHBOARD_CACHE_TTL=300  # 5 minutes in seconds